{
    "name": "2brands/metropol-portal",
    "description": "Mehrsprachiges Mitarbeiter-Portal mit intelligenter Routenplanung",
    "type": "project",
    "license": "proprietary",
    "authors": [
        {
            "name": "2Brands Media GmbH",
            "email": "info@2brands.de"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "^8.3",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-curl": "*",
        "slim/slim": "^4.12",
        "slim/psr7": "^1.6",
        "php-di/php-di": "^7.0",
        "vlucas/phpdotenv": "^5.6",
        "illuminate/database": "^10.0",
        "illuminate/validation": "^10.0",
        "monolog/monolog": "^3.5",
        "firebase/php-jwt": "^6.10",
        "guzzlehttp/guzzle": "^7.8",
        "respect/validation": "^2.3",
        "ramsey/uuid": "^4.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "squizlabs/php_codesniffer": "^3.8",
        "phpstan/phpstan": "^1.10",
        "mockery/mockery": "^1.6",
        "fakerphp/faker": "^1.23",
        "symfony/var-dumper": "^6.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --configuration phpunit.xml",
        "test:coverage": "phpunit --configuration phpunit.xml --coverage-html coverage",
        "cs": "phpcs --standard=PSR12 src tests",
        "cs:fix": "phpcbf --standard=PSR12 src tests",
        "stan": "phpstan analyse src --level max",
        "check": [
            "@cs",
            "@stan",
            "@test"
        ],
        "migrate": "php database/migrate.php",
        "migrate:rollback": "php database/migrate.php rollback",
        "migrate:fresh": "php database/migrate.php rollback 999 && php database/migrate.php",
        "seed": "php database/seed.php",
        "db:reset": "@migrate:fresh && @seed",
        "post-install-cmd": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@post-install-cmd"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}